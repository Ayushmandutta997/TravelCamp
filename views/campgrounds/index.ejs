
<% layout('layouts/boilerplate')  %>
<div id="cluster-map"></div>
<div class="my-md-3 container-fluid d-flex flex-column flex-md-row justify-content-between align-items-center">
    <h1 class="my-2 my-md-0">Campgrounds</h1>
    <div class="d-flex my-2 my-md-0">
        <input id="searchbar" type="text" name="search" placeholder=" Search by name or place..">
        <button id="searchButton" class="btn btn-primary ml-md-2">Search</button>
    </div>
</div>

<% for(let campground of campgrounds) {%>
<% if(campground.images){ %>
    <div class="card mb-3 campground">
        <div class="row">
            <div class="col-md-4 d-flex align-items-center">
                <img class="img-fluid" alt="" src="<%= campground.images[0].url %>">
            </div>
            
        <div class="col-md-8 d-flex justify-content-center align-items-center text-center">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %> </h5>
                <p class="card-text"><%= campground.description %></p>
                <p class="card-text">
                    <small><%= campground.location %></small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
            </div>
        </div>
        </div>
    </div>
<% } %>
<%}%>
<script>
const mapToken='<%-process.env.MAPBOX_TOKEN%>'
const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>    
<script src="/javascripts/clusterMap.js"></script>  
<script src="/javascripts/searchBar.js"></script>    
<script src="/javascripts/indexShow.js"></script>